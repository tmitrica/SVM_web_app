<header>
  <h1>SVM</h1>

  <nav>
    
    <div class="menu-toggle" tabindex="0">
      <i class="fas fa-bars"></i>
    </div>

    <ul class="menu">
      <li tabindex="0">
        <a href="/">
          <i class="fas fa-home"></i>
          <span>Acasă</span>
        </a>
        <ul>
          <li><a href="/#recomandari">Recomandări</a></li>
          <li><a href="/#tabel">Top vânzări</a></li>
        </ul>
      </li>
      <li><a href="/vanzari_masini">Mașini de vânzare</a></li>
      <li><a href="/adauga-anunt">Adaugă anunț</a></li>
      <li><a href="/galerie">Galerii</a></li>
      <li tabindex="0">
        <a href="/produse">
          <i class="fas fa-car"></i>
          <span>Produse</span>
        </a>
        <ul>
          <li><a href="/produse?categorie=toate">Toate</a></li>
          <% categorii.forEach(categorie => { %>
            <li><a href="/produse?categorie=<%= categorie %>"><%= categorie %></a></li>
          <% }) %>
        </ul>
      </li>

      <!-- switch temă -->
      <li class="theme-toggle-item">
        <label class="theme-switch">
          <input type="checkbox" id="themeToggleSwitch" />
          <span class="slider round">
            <i class="fas fa-sun"></i>
            <i class="fas fa-moon"></i>
          </span>
        </label>
      </li>
    </ul>
  </nav>
  <script src="/js/theme.js"></script>
</header>
